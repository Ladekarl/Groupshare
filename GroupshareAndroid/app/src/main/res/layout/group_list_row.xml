<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/group_1"
    android:clickable="true">

    <ImageView
        android:id="@+id/group_list_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/white_arrow_next_forward"
        android:contentDescription="@string/forward_image" />

    <TextView
        android:id="@+id/group_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/group_list_button"
        android:layout_toStartOf="@id/group_list_button"
        android:maxLines="2" />
</RelativeLayout>