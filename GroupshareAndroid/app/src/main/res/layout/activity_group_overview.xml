<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group03.itsmap.groupshare.GroupOverviewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/group_overview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/AppTheme.Toolbar">

        <TextView
            android:id="@+id/group_overview_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/groups"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <GridView
        android:id="@+id/group_gridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/group_overview_toolbar"
        android:horizontalSpacing="10sp"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:padding="20dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10sp" />

</RelativeLayout>
