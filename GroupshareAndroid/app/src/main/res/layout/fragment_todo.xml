<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_list_5"
    android:orientation="vertical">


    <TextView
        android:id="@+id/todo_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/todo_list_text"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/fragment_todo_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/todo_list_text"
        android:layout_centerInParent="true"
        android:divider="@null" />

    <ImageButton
        android:id="@+id/todo_fragment_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/white_arrow_next_forward"
        android:contentDescription="@string/forward_image" />
</RelativeLayout>
