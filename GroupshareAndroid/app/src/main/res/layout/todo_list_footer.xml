<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/add_todo_item_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:alpha="0.8"
        android:background="@drawable/white_add_sign"
        android:contentDescription="@string/add_todo_item_button" />

    <EditText
        android:id="@+id/add_todo_item_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/add_todo_item_button"
        android:layout_toRightOf="@+id/add_todo_item_button"
        android:alpha="0.8"
        android:background="@null"
        android:gravity="start|center"
        android:hint="@string/description"
        android:inputType="text"
        android:lines="1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />
</RelativeLayout>