<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/group_list_7"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="dk.iha.itsmap.f16.grp03.groupshare.activities.CalendarActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/calendar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/AppTheme.Toolbar" />

    <com.alamkanak.weekview.WeekView
        android:id="@+id/calendar_week_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calendar_toolbar"
        app:eventTextColor="@android:color/white"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@android:color/white"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:noOfVisibleDays="3"
        app:headerRowBackgroundColor="@color/group_list_7"
        app:todayHeaderTextColor="@android:color/white"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="@color/group_list_7_outer"
        app:headerColumnBackground="@android:color/white" />

</RelativeLayout>
